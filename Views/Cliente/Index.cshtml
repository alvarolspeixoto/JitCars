@model IEnumerable<Cliente>
@{
    ViewData["Title"] = "Clientes";
}

<div class="container">


    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Clientes</h1>
        <a class="btn btn-success mx-2" asp-controller="Cliente" asp-action="Cadastrar">Cadastrar novo cliente</a>
    </div>


<table class="table table-dark table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nome</th>
            <th scope="col">Sobrenome</th>
            <th scope="col">E-mail</th>
        </tr>
    </thead>
    <tbody>



        @if(Model != null)
        {

            @foreach(var cliente in Model)
            {
                <tr>
                    <th scope="row">@cliente.Id</th>
                    <td>@cliente.PrimeiroNome</td>
                    <td>@cliente.Sobrenome</td>
                    <td>@cliente.Email</td>
                    <!--<td> AINDA VOU CHEGAR NESSA PARTE DO VÍDEO
                        <a class="btn btn-warning mx-2" asp-controller="Cliente" asp-action="Editar" asp-route-id="cliente.Id"><i class="bi bi-pencil-square"></i>Editar</a>
                        <a class="btn btn-danger mx-2" asp-controller="Cliente" asp-action="Excluir" asp-route-id="cliente.Id"><i class="bi bi-trash3-fill"></i>Excluir</a>

                    </td>-->
                </tr>
            }
            
        }
        







    </tbody>
</table>

</div>