@model IEnumerable<Venda>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3 border">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Vendas</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Venda" asp-action="Registrar" class="btn btn-primary">
                Registrar Venda
            </a>
        </div>
    </div>
</div>


<table class="table table-bordered table-striped" style="width:65%">
    <thead>
        <tr>
            <th>
                CPF Cliente
            </th>
            <th>
                Data
            </th>
            <th>
                Forma de Pagamento
            </th>
            <th>
                Funcionário
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Cliente.Cpf
                </td>
                <td width="10%">
                    @obj.Data
                </td>
                <td width="10%">
                     @obj.FormaPagamento 
                </td>
                <td width="10%">
                    @obj.NotaFiscal
                </td>
                <td width="10%">
                    <div class="w-10 btn-group" role="group">
                        <a asp-controller="Venda" asp-action="Editar" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Editar
                        </a>
                        <a asp-controller="Venda" asp-action="Deletar" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>Deletar
                        </a>
                    
                </td>
                
            </tr>
        }
    </tbody>
</table>

