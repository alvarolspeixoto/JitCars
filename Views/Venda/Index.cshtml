@using JitCars.Enums
@using System.ComponentModel.DataAnnotations
@model IEnumerable<Venda>

@{
    ViewData["Title"] = "Index";

    var classeBtn = "btn btn-danger mx-2";

}

<div class="container p-3 border ml-5">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Vendas</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Venda" asp-action="Registrar" class="btn btn-primary">
                Registrar Venda
            </a>
        </div>
    </div>
</div>


<table class="table table-dark table-hover mt-5" style="width:75%" >
    <thead>
        <tr>
            <th>
                CPF Cliente
            </th>
            <th>
                Data
            </th>
            <th>
                Forma de Pagamento
            </th>
            <th>
                Funcionário
            </th>
            <th>
                Status
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="10%">
                    @obj.Cliente.Cpf
                </td>
                <td width="10%">
                    @obj.Data
                </td>
                <td width="10%">
                    @GetEnumDisplayName((FormaPagamento)obj.FormaPagamento)
                </td>
                <td width="10%">
                    @obj.Funcionario.PrimeiroNome @obj.Funcionario.Sobrenome
                </td>
                <td>
                    @obj.Status
                </td>
                <td width="10%">
                    <div class="w-10 btn-group" role="group">
                        <a asp-controller="Venda" asp-action="Editar" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>Editar
                        </a>
                        @{
                        if(obj.Status==Status.Efetuado){
                            <a asp-controller="Venda" asp-action="Deletar" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                <i class="bi bi-trash-fill"></i>Cancelar
                            </a>
                        }
                        else{
                            <a asp-controller="Venda" asp-action="Deletar" asp-route-id="@obj.Id" class="disabled btn btn-secondary mx-2">
                                <i class="bi bi-trash-fill"></i>Cancelar
                            </a>
                        }
                        }
                    </div>
                </td>
                
            </tr>
        }
    </tbody>
</table>

@functions {
    public static string GetEnumDisplayName(FormaPagamento forma)
    {
        var display = typeof(FormaPagamento).GetField(forma.ToString())
        .GetCustomAttributes(typeof(DisplayAttribute), false).SingleOrDefault() as DisplayAttribute;


        return display != null ? display.Name : forma.ToString();
    }
}